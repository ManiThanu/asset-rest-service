{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "plugins": [
    "import",
    "mocha"
  ],
  "rules": {
    "no-multi-spaces": [
      "error", {
        "exceptions": {
          "ImportDeclaration": true,
          "VariableDeclarator": true
        }
      }
    ],
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["!test.js"] }
    ],
    "no-console": "off",
    "class-methods-use-this": "off",
    "arrow-body-style": "off",
    "camelcase": "off"
  }
}
